{
  "name": "triplex",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/docs",
    "examples/*",
    "packages/*",
    "packages/*/*",
    "!packages/create-triplex-project/*"
  ],
  "scripts": {
    "build": "yarn clean && yarn workspaces run build",
    "clean": "yarn workspaces run rimraf dist",
    "clean:node_modules": "rimraf node_modules && yarn workspaces run rimraf node_modules",
    "dev": "node ./scripts/dev.js",
    "lint": "eslint ./ --cache",
    "test": "vitest",
    "typedef": "yarn workspaces run typedef"
  },
  "resolutions": {
    "@types/three": "^0.157.0",
    "three": "^0.157.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@nkzw/eslint-config": "^1.8.0",
    "@swc/core": "^1.3.28",
    "eslint": "^8.51.0",
    "eslint-plugin-header": "^3.1.1",
    "jsdom": "^21.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "react-three-test": "*",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.4",
    "vitest": "^0.34.6"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.16.0"
  }
}
