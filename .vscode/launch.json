{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Triplex for VS Code",
      "type": "extensionHost",
      "request": "launch",
      "env": {
        "FG_ENVIRONMENT_OVERRIDE": "development"
      },
      "debugWebviews": true,
      "args": [
        "${workspaceFolder}/examples",
        "${workspaceFolder}/examples-private",
        "${workspaceFolder}/examples-private/test-fixture/src/scene.tsx",
        "--disable-extensions",
        "--new-window",
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode",
        "--enable-coi"
      ]
    },
    {
      "args": [".", "--inspect"],
      "cwd": "${workspaceFolder}/apps/electron",
      "name": "Run Triplex Standalone",
      "outputCapture": "std",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "type": "node",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      }
    },
    {
      "name": "Attach Fork Process",
      "request": "attach",
      "type": "node",
      "port": 40895
    }
  ]
}
