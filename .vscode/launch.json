{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VSCode (DEV)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/apps/vscode"]
    },
    {
      "name": "Run VSCode (PROD)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/apps/vscode/out"]
    },
    {
      "args": [".", "--inspect"],
      "cwd": "${workspaceFolder}/apps/electron",
      "name": "Run Electron",
      "outputCapture": "std",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "type": "node",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      }
    },
    {
      "name": "Attach Fork Process",
      "request": "attach",
      "type": "node",
      "port": 40895
    }
  ]
}
