{
  "name": "@triplex/run",
  "description": "The React Three Fiber editor.",
  "version": "0.50.1",
  "author": "Michael Dougall (https://twitter.com/itsdouges)",
  "license": "Apache-2.0",
  "publishConfig": {
    "bin": {
      "triplex": "./dist/index.js"
    }
  },
  "bin": {
    "triplex": "./hook.js"
  },
  "scripts": {
    "build": "swc ./src -d ./dist",
    "build:config-schema": "ts-json-schema-generator --additional-properties true --path './src/types.ts' --type 'TRIPLEXConfig' > config.schema.json",
    "typedef": "tsc && npm run build:config-schema"
  },
  "dependencies": {
    "@triplex/client": "0.50.1",
    "@triplex/editor": "0.50.1",
    "@triplex/server": "0.50.1",
    "@commander-js/extra-typings": "^10.0.2",
    "express": "^4.18.2",
    "commander": "^10.0.0",
    "ora": "^6.1.2",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.28",
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.18",
    "ts-json-schema-generator": "^1.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist",
    "templates",
    "config.schema.json"
  ]
}
