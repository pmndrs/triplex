{
  "name": "@triplex/electron",
  "version": "0.60.1",
  "private": true,
  "description": "The React Three Fiber editor.",
  "repository": "https://github.com/try-triplex/triplex",
  "license": "GPL-3.0",
  "author": "Michael Dougall (https://twitter.com/itsdouges)",
  "main": "./hook-main.js",
  "scripts": {
    "build": "vite build",
    "build-target": "rimraf targets && pnpm prep-workspace && cross-env USE_HARD_LINKS=false electron-builder --publish never && pnpm cleanup-workspace",
    "build-targets": "rimraf targets && pnpm prep-workspace && cross-env USE_HARD_LINKS=false electron-builder --publish never --mac dir:x64 dir:arm64 --win dir:x64 dir:ia32 && pnpm cleanup-workspace",
    "cleanup-workspace": "git checkout ../../packages/*/package.json ../../packages/@triplex/*/package.json",
    "dev": "cross-env electron .",
    "prep-workspace": "node ../../scripts/workspace-run.js ./apply-publish-config.js",
    "release": "rimraf targets && pnpm prep-workspace && cross-env USE_HARD_LINKS=false electron-builder --mac zip:x64 zip:arm64 dmg:x64 dmg:arm64 --win nsis:x64 nsis:ia32 --publish always && pnpm cleanup-workspace",
    "test:e2e": "playwright test",
    "typedef": "tsc"
  },
  "dependencies": {
    "@triplex/client": "0.60.1",
    "@triplex/editor": "0.60.1",
    "@triplex/server": "0.60.1",
    "create-triplex-project": "0.60.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@sentry/electron": "^4.5.0",
    "@sentry/node": "^7.51.0",
    "@types/node": "^18.11.18",
    "anymatch": "^3.1.3",
    "electron": "27.1.0",
    "electron-builder": "^24.6.4",
    "electron-builder-notarize": "^1.5.1",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.4",
    "glob-parent": "^6.0.2",
    "launch-editor": "^2.6.1",
    "readdirp": "^3.6.0",
    "shell-env": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "upath": "^2.0.1",
    "vite": "^4.4.11"
  },
  "productName": "Triplex"
}
