{
  "name": "@triplex/electron",
  "private": true,
  "description": "The React Three Fiber editor.",
  "version": "0.45.1",
  "author": "Michael Dougall (https://twitter.com/itsdouges)",
  "license": "Apache-2.0",
  "main": "./hook.js",
  "build": {
    "appId": "dev.triplex.app",
    "asar": false,
    "copyright": "Copyright Â© 2023 Michael Dougall",
    "directories": {
      "output": "targets"
    },
    "extraMetadata": {
      "main": "./dist/entrypoints/main.js"
    },
    "files": [
      "dist"
    ],
    "productName": "Triplex"
  },
  "scripts": {
    "build-target": "pnpm prep-workspace && electron-builder && pnpm cleanup-workspace",
    "build": "pnpm swc ./src -d ./dist",
    "cleanup-workspace": "git checkout ../../packages/*/package.json",
    "dev": "electron .",
    "prep-workspace": "pnpm -r exec node ../../scripts/apply-publish-config.js"
  },
  "dependencies": {
    "@triplex/client": "0.45.1",
    "@triplex/editor": "0.45.1",
    "@triplex/server": "0.45.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.28",
    "@types/node": "^18.11.18",
    "electron-builder": "^23.6.0",
    "electron": "24.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
