{
  "name": "@triplex/electron",
  "productName": "Triplex",
  "private": true,
  "description": "The React Three Fiber editor.",
  "version": "0.46.3",
  "author": "Michael Dougall (https://twitter.com/itsdouges)",
  "license": "Apache-2.0",
  "main": "./hook-main.js",
  "repository": "https://github.com/try-triplex/releases",
  "scripts": {
    "build-targets": "rm -rf targets && pnpm prep-workspace && USE_HARD_LINKS=false electron-builder --publish never --mac dir:x64 dir:arm64 --win dir:x64 && pnpm cleanup-workspace",
    "build": "pnpm swc ./src -d ./dist",
    "cleanup-workspace": "git checkout ../../packages/*/package.json",
    "dev": "electron .",
    "prep-workspace": "pnpm -r exec node ../../scripts/apply-publish-config.js",
    "release": "rm -rf targets && pnpm prep-workspace && USE_HARD_LINKS=false electron-builder --mac zip:x64 zip:arm64 dmg:x64 dmg:arm64 --win nsis:x64 --publish always && pnpm cleanup-workspace"
  },
  "dependencies": {
    "@sentry/electron": "^4.5.0",
    "@sentry/node": "^7.51.0",
    "@triplex/client": "0.46.3",
    "@triplex/editor": "0.46.3",
    "@triplex/server": "0.46.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.3.0",
    "electron-log": "^5.0.0-beta.23"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.28",
    "@types/node": "^18.11.18",
    "electron-builder": "^23.6.0",
    "electron": "24.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
