{
  "name": "triplex-vsce",
  "displayName": "Trplx",
  "version": "0.0.9",
  "private": true,
  "description": "Coming soon.",
  "categories": [],
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/try-triplex/triplex"
  },
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "trytriplex",
  "main": "./hook-extension.js",
  "files": [
    "!hook-extension.js",
    "dist",
    "index.html",
    "loading.html",
    "static"
  ],
  "scripts": {
    "build": "vite build --mode vsce && vite build --mode app",
    "prepack": "node ../../scripts/workspace-run.js ./apply-publish-config.js",
    "pack": "node scripts/pack.js",
    "publish": "cd out && vsce publish --no-dependencies",
    "typedef": "tsc -p ./tsconfig.json && tsc -p ./src/app/tsconfig.json"
  },
  "contributes": {
    "commands": [
      {
        "category": "Triplex",
        "command": "triplex.start",
        "title": "Open File",
        "when": "editorFocus && (resourceExtname === .jsx || resourceExtname === .tsx)"
      },
      {
        "category": "Triplex",
        "command": "triplex.set-camera-editor",
        "title": "Editor Camera"
      },
      {
        "category": "Triplex",
        "command": "triplex.set-camera-default",
        "title": "Default Camera"
      }
    ],
    "customEditors": [
      {
        "viewType": "triplex.editor",
        "displayName": "Triplex",
        "selector": [
          {
            "filenamePattern": "*.(tsx|jsx)"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "webview/context": [
        {
          "command": "triplex.set-camera-editor",
          "when": "webviewSection == 'play-camera'",
          "group": "camera@1"
        },
        {
          "command": "triplex.set-camera-default",
          "when": "webviewSection == 'play-camera'",
          "group": "camera@2"
        }
      ]
    }
  },
  "activationEvents": [
    "workspaceContains:**/*.{jsx,tsx}"
  ],
  "dependencies": {
    "@triplex/client": "0.67.8",
    "@triplex/server": "0.67.8"
  },
  "devDependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@triplex/bridge": "0.67.8",
    "@triplex/lib": "0.67.8",
    "@triplex/ux": "0.67.8",
    "@triplex/ws": "0.67.8",
    "@types/raf-schd": "^4.0.3",
    "@types/vscode": "^1.88.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.26.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "anymatch": "^3.1.3",
    "autoprefixer": "^10.4.16",
    "electron": "27.1.0",
    "electron-builder": "^24.6.4",
    "get-port": "^7.0.0",
    "raf-schd": "^4.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-error-boundary": "^3.1.4",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.5.2",
    "upath": "^2.0.1",
    "vite": "^4.5.3",
    "zustand": "^4.3.2"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "publishConfig": {
    "main": "./dist/extension.js"
  },
  "icon": "./static/logo.png",
  "sponsor": {
    "url": "https://github.com/sponsors/itsdouges"
  }
}
