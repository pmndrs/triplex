{
  "name": "triplex-vscode",
  "displayName": "Triplex",
  "version": "0.0.2",
  "private": true,
  "description": "The React Three Fiber visual IDE.",
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "r3f",
    "react",
    "spatial",
    "three",
    "threejs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/try-triplex/triplex"
  },
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "trytriplex",
  "main": "./hook-extension.js",
  "files": [
    "!hook-extension.js",
    "dist",
    "index.html",
    "loading.html",
    "static"
  ],
  "scripts": {
    "build": "vite build",
    "prepack": "node ../../scripts/workspace-run.js ./apply-publish-config.js",
    "pack": "node scripts/pack.js",
    "publish": "cd out && vsce publish --no-dependencies",
    "typedef": "tsc"
  },
  "contributes": {
    "commands": [
      {
        "command": "triplex.start",
        "category": "Triplex",
        "title": "Open File",
        "when": "editorFocus && (resourceExtname === .jsx || resourceExtname === .tsx)"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:**/*.{jsx,tsx}"
  ],
  "dependencies": {
    "@triplex/client": "0.67.2",
    "@triplex/server": "0.67.2"
  },
  "devDependencies": {
    "@triplex/bridge": "0.67.2",
    "@triplex/ws": "0.67.2",
    "@types/vscode": "^1.88.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.26.0",
    "anymatch": "^3.1.3",
    "autoprefixer": "^10.4.16",
    "electron": "27.1.0",
    "electron-builder": "^24.6.4",
    "get-port": "^7.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.3.3",
    "upath": "^2.0.1",
    "vite": "^4.5.3"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "publishConfig": {
    "main": "./dist/extension.js"
  },
  "icon": "./static/logo.png",
  "sponsor": {
    "url": "https://github.com/sponsors/itsdouges"
  }
}
